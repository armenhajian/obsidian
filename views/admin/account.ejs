<div>
    <%if(typeof error !='undefined'){%>
    <span><%=error%></span>
    <%}%>
</div>
<div style="max-width: 500px; margin:0 auto">
    <form action="/changePassword" method="post" class="form-horizontal">
        <fieldset>
            <legend>Change Password</legend>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="text" name="oldPassword" class="form-control" placeholder="Old Password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="text" name="password" class="form-control" placeholder="New Password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="text" name="repeatedPassword" class="form-control" placeholder="Repeat Password">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>
</div>